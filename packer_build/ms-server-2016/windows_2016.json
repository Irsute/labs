{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Windows2016_64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "headless": true,
      "boot_wait": "2m",
      "communicator":"winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "disk_size": 61440,
      "floppy_files": [
        "{{user `autounattend`}}"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "../result_box/windows_2016_{{.Provider}}.box",
      "type": "vagrant",
      "vagrantfile_template": "vagrant-win_2016.template"
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/enable-rdp.bat",
        "./scripts/disable-auto-logon.bat"
      ]
    }
  ],
  "variables": {
    "autounattend": "./answer_file/autounattend.xml",
    "iso_checksum": "70721288bbcdfe3239d8f8c0fae55f1f",
    "iso_checksum_type": "md5",
    "iso_url": "../iso/14393.0.161119-1705.RS1_REFRESH_SERVER_EVAL_X64FRE_EN-US.ISO"
  }
}

